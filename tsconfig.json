{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "src",
    "paths": {
      "components/*": [
        "components/*"
      ],
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "typeRoots": [
      "node_modules/@types",
      "./src/types/common",
    ],
  },
  "exclude": [
    "node_modules",
    ".next",
    "out"
  ],
  "include": [
    "src"
  ]
}
